<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_image"
                android:src="@drawable/ic_user_image"
                android:layout_width="40dp"

                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="默认用户"
                android:gravity="center"
                android:layout_marginLeft="10dp">

            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/post_title"
            style="@style/post_title" />

        <TextView
            android:id="@+id/post_content"
            style="@style/post_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/line">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_unlike"
                android:scaleType="fitEnd">

            </ImageView>

            <TextView
                android:id="@+id/like_count_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="23">

            </TextView>

            <ImageView
                android:id="@+id/comment_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_comment"
                android:scaleType="fitEnd">

            </ImageView>

            <TextView
                android:id="@+id/comment_count_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9">

            </TextView>


            <ImageView
                android:id="@+id/share_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_share"
                android:scaleType="fitEnd">

            </ImageView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="分享">

            </TextView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:id="@+id/send_content"
            android:hint="在此处发表你的评论吧"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/comment_send"
            android:text="发布"
            style="@style/LyqBtnStyle"/>
    </LinearLayout>

    <include layout="@layout/comment_list"/>

</LinearLayout>

